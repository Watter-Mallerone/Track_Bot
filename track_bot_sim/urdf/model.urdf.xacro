<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="track_bot">

    <xacro:include filename="setup.xacro"/>

<!-- ***** Body Setup ***** -->
    <xacro:property name="body_origin_x" value="0"/>
    <xacro:property name="body_origin_y" value="0"/>
    <xacro:property name="body_origin_z" value="0"/>

    <xacro:property name="body_size_x" value="2"/>
    <xacro:property name="body_size_y" value="1"/>
    <xacro:property name="body_size_z" value="0.5"/>

    <xacro:property name="body_mass" value="1"/>

    <xacro:macro name="body_origin">
        <origin xyz="${body_origin_x} ${body_origin_y} ${body_origin_z}" rpy="0 0 0"/>
    </xacro:macro>

    <xacro:macro name="body_shape">
        <geometry>
            <box size="${body_size_x} ${body_size_y} ${body_size_z}"/>
        </geometry>
    </xacro:macro>

    <xacro:macro name="body_color">
        <material name="green"/>
    </xacro:macro>

    <xacro:macro name="body_link">
        <visual>
            <xacro:body_shape/>
            <xacro:body_color/>
        </visual>
        <collision>
            <xacro:body_shape/>
        </collision>
        <xacro:inertial_box mass="${body_mass}" x="${body_size_x}" y="${body_size_y}" z="${body_size_z}">
            <xacro:body_origin/>
        </xacro:inertial_box>
    </xacro:macro>
<!-- ***** Body Setup End ***** -->

<!-- ***** Wheel Setup ***** -->
    <xacro:property name="wheel_origin_x" value="0.8"/>
    <xacro:property name="wheel_origin_y" value="0.75"/>
    <xacro:property name="wheel_origin_z" value="-0.5"/>

    <xacro:property name="wheel_radius" value="0.25"/>
    <xacro:property name="wheel_length" value="0.5"/>

    <xacro:property name="wheel_mass" value="5"/>

    <xacro:macro name="wheel_shape">
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
    </xacro:macro>

    <xacro:macro name="wheel_color">
        <material name="blue"/>
    </xacro:macro>

    <xacro:macro name="wheel_axis">
        <axis xyz="0 0 1"/>
    </xacro:macro>

    <xacro:macro name="wheel_link">
        <visual>
            <xacro:wheel_shape/>
            <xacro:wheel_color/>
        </visual>
        <collision>
            <xacro:wheel_shape/>
        </collision>
        <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </xacro:macro>

<!-- ***** Wheel Setup End ***** -->

    <link name="base_link"></link>

<!-- ***** Body Parts ***** -->
    <joint name="body_joint" type="fixed">
        <xacro:body_origin/>
        <parent link="base_link"/>
        <child link="body_link"/>        
    </joint>

    <link name="body_link">
        <xacro:body_link/>
    </link>
<!-- ***** Body Parts End ***** -->

<!-- ***** Wheel Parts ***** -->
    <joint name="FR_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="FR_wheel_link"/>
        <origin xyz="${wheel_origin_x} -${wheel_origin_y} ${wheel_origin_z}" rpy="${pi/2} 0 0"/>
        <xacro:wheel_axis/>
    </joint>

    <link name="FR_wheel_link">
        <xacro:wheel_link/>
    </link>

    <joint name="FL_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="FL_wheel_link"/>
        <origin xyz="${wheel_origin_x} ${wheel_origin_y} ${wheel_origin_z}" rpy="-${pi/2} 0 0"/>
        <xacro:wheel_axis/>
    </joint>

    <link name="FL_wheel_link">
        <xacro:wheel_link/>
    </link>

    <joint name="RR_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="RR_wheel_link"/>
        <origin xyz="-${wheel_origin_x} -${wheel_origin_y} ${wheel_origin_z}" rpy="${pi/2} 0 0"/>
        <xacro:wheel_axis/>
    </joint>

    <link name="RR_wheel_link">
        <xacro:wheel_link/>
    </link>

    <joint name="RL_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="RL_wheel_link"/>
        <origin xyz="-${wheel_origin_x} ${wheel_origin_y} ${wheel_origin_z}" rpy="-${pi/2} 0 0"/>
        <xacro:wheel_axis/>
    </joint>

    <link name="RL_wheel_link">
        <xacro:wheel_link/>
    </link>
<!-- ***** Wheel Parts End ***** -->

<!-- ***** Camera Parts ***** -->
    <joint name="camera_joint" type="fixed">
        <origin xyz="0 0 2" rpy="0 0 0"/>
        <parent link="body_link"/>
        <child link="camera_link"/>        
    </joint>

    <link name="camera_link">
        <visual>
            <origin xyz="-0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.15 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <visual>
            <origin xyz="0.03 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.12 0.15 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.12" y="0.15" z="0.15">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
<!-- ***** Camera Parts End***** -->

    <xacro:include filename="gazebo.xacro"/>
</robot>